[Unit]
Description=SurveillX WebSocket Stream Hub
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/surveillx-backend
Environment="PATH=/home/ubuntu/surveillx-backend/venv/bin:/usr/local/bin:/usr/bin"
ExecStart=/home/ubuntu/surveillx-backend/venv/bin/python3 gst_streaming_server.py
Restart=always
RestartSec=5
StandardOutput=append:/home/ubuntu/surveillx-backend/logs/ws_hub.log
StandardError=append:/home/ubuntu/surveillx-backend/logs/ws_hub.log

[Install]
WantedBy=multi-user.target
