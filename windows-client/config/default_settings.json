{
    "server": {
        "url": "http://surveillx.duckdns.org:5000",
        "websocket_path": "/stream",
        "api_path": "/api"
    },
    "camera": {
        "device_id": 0,
        "width": 1280,
        "height": 720,
        "fps": 15
    },
    "streaming": {
        "quality": 80,
        "resize_width": 640,
        "resize_height": 480,
        "encode_format": "jpeg"
    },
    "detection": {
        "enable_face_detection": true,
        "enable_activity_detection": true,
        "face_detection_interval": 5,
        "min_face_confidence": 0.6
    },
    "auth": {
        "username": "",
        "password": "",
        "token": ""
    },
    "ui": {
        "start_minimized": false,
        "show_preview": true,
        "enable_notifications": true
    },
    "logging": {
        "level": "INFO",
        "file": "logs/client.log"
    }
}
